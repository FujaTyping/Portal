---
import { header, game } from "index.json";
import Section from "@/components/Section.astro";

const { title, description, image, textColor } = header;
---

<Section>
  <div class="container" style={`color: ${textColor};`}>
    <img src=`${image}` />
    <h1>{title}</h1>
    <h2>{description}</h2>
    <div class="game-container">
      {
        game.map(({ name, logo, display }) => {
          let AltText = `${name} : `;
          return (
            <span class="badge">
              <img
                src={logo}
                alt={AltText}
                style="vertical-align: middle;"
                class="game-icon"
              />
              {display}
            </span>
          );
        })
      }
    </div>
  </div>
</Section>

<style>
  .game-container {
    display: flex;
    margin-top: 8px;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    font-size: 0.8rem;
    flex-wrap: wrap;
  }

  .badge {
    background-color: #e72e38;
    color: #fff;
    padding: 8px;
    border-radius: 20px;
    transition: all 300ms cubic-bezier(0.23, 1, 0.32, 1);
  }

  .game-icon {
    max-width: 25px;
  }

  h1 {
    padding-top: 1rem;
    font-family: DemonSayHi;
    font-size: 3.25rem;
  }

  h2 {
    padding-top: 0.5rem;
    font-size: 1.1rem;
    font-weight: normal;
    text-wrap: pretty;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 150px;
    border-radius: 16px;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }

  .badge:hover {
    cursor: pointer;
    box-shadow:
      inset 0 -40px 80px 0 #e72e38,
      0 8px 15px rgba(0, 0, 0, 0.25);
    transform: translateY(-2px);
  }
</style>
